<Window x:Name="___Без_имени_" x:Class="ClientTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTCP"
        mc:Ignorable="d"
        Title="Client" Height="404" Width="830" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="buttonGetListFiles" Content="Открыть/Скачать файл" HorizontalAlignment="Left" Margin="125,73,0,0" VerticalAlignment="Top" Width="176" Height="32" Click="buttonGetListFiles_Click"/>
        <ListBox x:Name="ListFiles" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,110,10,49" SelectionChanged="ListFiles_SelectionChanged"/>
        <Label x:Name="LabelLink" Content="-Нет подключения-" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Width="810"/>
        <Button x:Name="buttonBack" Content="Назад" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="93" Click="buttonBack_Click" Height="32"/>

    </Grid>
</Window>
